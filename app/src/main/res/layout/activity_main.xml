<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <site.iway.androidhelpers.CameraPreview
        android:id="@+id/cameraPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:detectQRCode="true"
        app:focusByClick="true" />

    <site.iway.androidhelpers.ExtendedLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="50dp">

        <Button
            android:id="@+id/camera0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CAMERA-0" />

        <Button
            android:id="@+id/camera1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="CAMERA-1" />

    </site.iway.androidhelpers.ExtendedLinearLayout>

</FrameLayout>